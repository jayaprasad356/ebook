<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greymatterworks.ebook.ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            />


        <RelativeLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_coner"
            android:backgroundTint="@color/colorAccent"
            >



            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="@dimen/_40sdp"
                android:id="@+id/cardView"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">



            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_user" />

            </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_below="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />


        <TextView
            android:layout_below="@+id/tvName"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvEmail"
            android:gravity="center"
            android:textColor="@color/black"
            />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlNeedBook"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_coner"
            android:padding="@dimen/_14sdp"
            >



            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need Book"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_coner"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/ic_right_arrow"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlHelpAndContact"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_coner"
            android:padding="@dimen/_14sdp"
            >



            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help and Contanct"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_coner"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/ic_right_arrow"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlSignOut"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_coner"
            android:padding="@dimen/_14sdp"
            >



            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_coner"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/ic_right_arrow"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>